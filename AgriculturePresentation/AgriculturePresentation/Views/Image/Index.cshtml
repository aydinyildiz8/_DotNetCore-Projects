@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Galeri</h4>

                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                          <tr>
                              <th>Görsel</th>
                              <th>Id</th>
                              <th>Başlık</th>
                              <th>Açıklama</th>
                              <th>Görsel Linki</th>
                              <th>Sil</th>
                              <th>Düzenle</th>
                          </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                             <tr>
                                 <td class="py-1"><img src="@item.ImageUrl" alt="image"/></td>
                                 <td>@item.ImageId</td>
                                 <td>@item.Title</td>
                                 <td>@item.Description</td>
                                 <td>@item.ImageUrl</td>
                                 <td><a href="/Image/DeleteImage/@item.ImageId" class="btn btn-outline-danger">Sil</a></td>
                                 <td><a href="/Image/UpdateImage/@item.ImageId" class="btn btn-outline-success">Güncelle</a></td>
                             </tr>
                        }
                      </tbody>
                    </table>
                   <div class="pt-4">
                    <a href="/Image/AddImage/" class="btn btn-outline-info me-2">Yeni Görsel Girişi</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

