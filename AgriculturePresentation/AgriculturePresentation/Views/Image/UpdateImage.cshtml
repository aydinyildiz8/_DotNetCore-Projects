@model EntityLayer.Concrete.Image

@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Görsel Güncelleme Sayfası</h4>
                    <form class="forms-sample" method="post">
                        <input type="hidden" asp-for="ImageId"/>
                    <div class="form-group">
                      <label for="exampleInputTitle">Başlık</label>
                      <span asp-validation-for="Title" class="text-danger"></span>
                      <input type="text" class="form-control" id="exampleInputTitle" placeholder="Lütfen Görsel Başlığını Giriniz" asp-for="Title">
                    </div>
                       <div class="form-group">
                      <label for="exampleTextarea1">Açıklama</label>
                      <span asp-validation-for="Description" class="text-danger"></span>
                      <textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="Description"></textarea>
                    </div>
                   <div class="form-group">
                      <label for="exampleInputImage">Görsel Linki</label>
                      <span asp-validation-for="ImageUrl" class="text-danger"></span>
                      <input type="text" class="form-control" id="exampleInputImage" placeholder="Lütfen Görsel Linkini Giriniz" asp-for="ImageUrl">
                    </div>
                    <button type="submit" class="btn btn-outline-info me-2">Değişiklikleri Kaydet</button>
                     <a href="/Image/Index/" class="btn btn-light">Vazgeç</a>
                  </form>
                </div>
              </div>
            </div>

