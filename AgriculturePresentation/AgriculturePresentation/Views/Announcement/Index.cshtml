@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
   <div class="card">
     <div class="card-body">
       <h4 class="card-title">Duyuru Listesi</h4>

       <div class="table-responsive pt-3">
         <table class="table table-bordered">
           <thead>
             <tr>
             <th>#</th>
             <th>Başlık</th>
             <th>Açıklama</th>
             <th>Tarih</th>
             <th>Status</th>
             <th>Sil</th>
             <th>Düzenle</th>
             <th>Aktif Yap</th>
             <th>Pasif Yap</th>
             </tr>
           </thead>
           <tbody>
             @foreach (var item in Model)
             {
                <tr>
                   <td>@item.AnnouncementId</td>
                   <td>@item.Title</td>
                   <td>@item.Description</td>
                   <td>@item.Date</td>
                   <td>@item.Status</td>
                   <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-outline-danger">Sil</a></td>
                   <td><a href="/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-outline-success">Güncelle</a></td>
                       <td><a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementId" class="btn btn-outline-warning">Aktif Yap</a></td>
                       <td><a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementId" class="btn btn-outline-secondary">Pasif Yap</a></td>
                </tr>
             }
           </tbody>
         </table>
         <div class="pt-4">
         <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-info me-2">Yeni Duyuru Girişi</a>
         </div>
       </div>
     </div>
   </div>
</div>

