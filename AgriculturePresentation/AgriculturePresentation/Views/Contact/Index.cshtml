@using EntityLayer.Concrete
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
       <div class="card">
         <div class="card-body">
           <h4 class="card-title">Mesajlar</h4>

           <div class="table-responsive">
             <table class="table table-striped">
               <thead>
                   <tr>
                       <th>Id</th>
                       <th>Ad Soyad</th>
                       <th>Tarih</th>
                       <th>Mail Adresi</th>
                       <th>Mesaj</th>
                       <th>Sil</th>
                   </tr>
               </thead>
               <tbody>
                        @foreach (var item in Model)
                        {
                          <tr>
                              <td>@item.ContactId</td>
                              <td>@item.Name</td>
                              <td>@item.EMail</td>
                              <td>@item.Date</td>
                              <td><a href="/Contact/DetailsMessage/@item.ContactId" class="btn btn-outline-primary">Mesajı Gör</a></td>
                              <td><a href="/Contact/DeleteMessage/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
                          </tr>
                        }
               </tbody>
             </table>
            </div>
         </div>
       </div>
     </div>

