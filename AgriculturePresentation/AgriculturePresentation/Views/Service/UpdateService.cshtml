@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
                    <form class="forms-sample" method="post">
                        @Html.HiddenFor(x => x.ServiceId)
                    <div class="form-group">
                      <label for="exampleInputName1">Başlık</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Başlık Giriniz" asp-for="Title">
                    </div>
                        <div class="form-group">
                      <label for="exampleTextarea1">Açıklama</label>
                      <textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="Description"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputImage">Görsel</label>
                      <input type="text" class="form-control" id="exampleInputImage" placeholder="Lütfen Görsel Linkini Giriniz" asp-for="Image">
                    </div>
                    <button type="submit" class="btn btn-outline-success me-2">Değişiklikleri Kaydet</button>
                    <a href="/Service/Index/" class="btn btn-light">Vazgeç</a>
                  </form>
                </div>
              </div>
            </div>