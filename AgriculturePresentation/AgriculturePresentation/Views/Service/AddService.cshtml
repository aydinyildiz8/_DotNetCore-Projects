@model AgriculturePresentation.Models.ServiceAddViewModel
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Yeni Hizmet Kaydı</h4>
                    <form class="forms-sample" method="post">
                    <div class="form-group">
                      <label for="exampleInputTitle">Başlık</label>
                      <input type="text" class="form-control" id="exampleInputTitle" placeholder="Lütfen Başlık Giriniz" asp-for="Title">
                    </div>
                     <div class="form-group">
                      <label for="exampleTextarea1">Açıklama</label>
                      <textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="Description"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputImage">Görsel</label>
                      <input type="text" class="form-control" id="exampleInputImage" placeholder="Lütfen Görsel Lİnlini Giriniz" asp-for="Image">
                    </div>
                    <button type="submit" class="btn btn-outline-info me-2">Kaydet</button>
                    <a href="/Service/Index/" class="btn btn-light">Vazgeç</a>
                  </form>
                </div>
              </div>
            </div>

