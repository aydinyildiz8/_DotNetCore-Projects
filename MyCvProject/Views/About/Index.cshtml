@using MyCvProject.Models.Entities
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <div>
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <h1>Profil Bilgilerim</h1>
                        </div>
                    </div>
                </div>
            </section>
            <section class="content">
                <div class="container-fluid">
                    @foreach (var item in Model)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card card-primary card-outline">
                                    <div class="card-body box-profile">
                                        <div class="text-center">
                                            <img class="profile-user-img img-fluid img-circle"
                                             src="@item.ResimUrl"
                                             alt="User profile picture">
                                        </div>

                                        <h3 class="profile-username text-center">@item.Ad @item.Soyad</h3>
                                        <p class="text-muted text-center">@item.Meslek</p>
                                        <strong><i class="fas fa-phone-square-alt mr-1"></i>Telefon Numarası</strong>
                                        <p class="text-muted">
                                            @item.Telefon
                                        </p>
                                        <strong><i class="fas fa-mail-bulk mr-1"></i>Mail Adresi</strong>
                                        <p class="text-muted">@item.Mail</p>
                                        <hr>
                                        <strong><i class="fas fa-map-marker-alt mr-1"></i>Adres</strong>
                                        <p class="text-muted">@item.Adres</p>
                                        <hr>
                                        <strong><i class="far fa-file-alt mr-1"></i>Hakkımda</strong>
                                        <p class="text-muted">@item.Aciklama</p>
                                        <hr>

                                        <a href="/About/UpdateAbout/@item.Id" class="btn btn-primary btn-block"><b>Profil Düzenle</b></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</body>
</html>
