@model MyCvProject.Models.Entities.SocialMedia

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header"><h5>Sosyal Medya Hesabı Düzenleme Sayfası</h5></div>
<div class="card-body">
    <form method="post">
        <div class="form-group">
            <label>Sosyal Medya İsmi</label>
            <input type="text" class="form-control" name="Ad" value="@Model.Ad">
        </div>
        <div class="form-group">
            <label>Sosyal Medya Linki</label>
            <input type="text" class="form-control" name="Link" value="@Model.Link">
        </div>
        <div class="form-group">
            <label>Sosyal Medya İkonu</label>
            <input type="text" class="form-control" name="Ikon" value="@Model.Ikon">
        </div>
        <button type="submit" class="btn btn-primary">GÜNCELLE</button>
    </form>
</div>
