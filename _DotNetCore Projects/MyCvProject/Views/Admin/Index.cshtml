@using MyCvProject.Models.Entities
@model List<Admin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Hesapları</h3>
                            </div>
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#ModalAdd">Yeni Kullanıcı Ekle</button>
                                <br /><br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Kullanıcı Adı</th>
                                            <th>Sil</th>
                                            <th>Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.KullaniciAdi</td>
                                                <td>
                                                    <a href="/Admin/DeleteAdmin/@item.Id" class="btn btn-danger"><i class="fas fa-trash mr-2"></i>Sil</a>
                                                </td>
                                                <td>
                                                    <a href="/Admin/UpdateAdmin/@item.Id" class="btn btn-success"><i class="fas fa-pencil-alt mr-2"></i>Düzenle</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="modal" id="ModalAdd">
            <div class="modal-dialog">
                <div class="modal-content" style="width:100%">
                    <div class="modal-header">
                        <h2 class="modal-title"> Yeni Kullanıcı Ekleme Penceresi </h2>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/Admin/AddAdmin/">

                            <label>Kullanıcı Adı</label>
                            <input type="text" name="KullaniciAdi" class="form-control" />
                            <br />

                            <label>Şifre</label>
                            <input type="password" name="Sifre" class="form-control" />
                            <br />

                            <button type="submit" class="btn btn-primary">KAYDET</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>

