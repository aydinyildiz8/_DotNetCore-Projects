@using MyCvProject.Models.Entities
@model List<SocialMedia>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Hesapları</h3>
                            </div>
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#ModalAdd">Yeni Sosyal Medya Hesabı Ekle</button>
                                <br /><br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Medya</th>
                                            <th>Durum</th>
                                            <th>Durum Güncelle</th>
                                            <th>Sil</th>
                                            <th>Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Ad</td>
                                                <td> @item.Durum</td>
                                                <td>

                                                    <a href="/SocialMedia/StatusSocialMedia/@item.Id" class="btn btn-warning"><i class="fas fa-trash mr-2"></i>Durum</a>
                                                </td>
                                                <td>
                                                    <a href="/SocialMedia/DeleteSocialMedia/@item.Id" class="btn btn-danger"><i class="fas fa-trash mr-2"></i>Sil</a>
                                                </td>
                                                <td>
                                                    <a href="/SocialMedia/UpdateSocialMedia/@item.Id" class="btn btn-success"><i class="fas fa-pencil-alt mr-2"></i>Düzenle</a>


                                                    @* <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#ModalEdit" asp-controller="SocialMedia" asp-action="UpdateSocialMedia" asp-route-id="@item.Id"><i class="fas fa-pencil-alt mr-2"></i>Düzenle</button>

                                                <div class="modal fade" id="ModalEdit" role="dialog">
                                                <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                <div class="modal-header">
                                                <h5 class="modal-title">Sosyal Medya Hesabı Düzenleme Penceresi</h5>
                                                </div>
                                                <div class="modal-body">
                                                <form method="post" asp-controller="SocialMedia" asp-action="UpdateSocialMedia" asp-route-id="@item.Id">
                                                <div class="form-group">
                                                <label>Sosyal Medya İsmi</label>
                                                <input type="text" class="form-control" name="Ad" value="@item.Ad">
                                                </div>
                                                <div class="form-group">
                                                <label>Sosyal Medya Linki</label>
                                                <input type="text" class="form-control" name="Link" value="@item.Link">
                                                </div>
                                                <div class="form-group">
                                                <label>Sosyal Medya İkonu</label>
                                                <input type="text" class="form-control" name="Ikon" value="@item.Ikon">
                                                </div>
                                                <button type="submit" class="btn btn-primary">GÜNCELLE</button>
                                                </form>
                                                </div>
                                                </div>
                                                </div>
                                                </div>*@


                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="modal" id="ModalAdd">
            <div class="modal-dialog">
                <div class="modal-content" style="width:124%">
                    <div class="modal-header">
                        <h2 class="modal-title"> Yeni Sosyal Medya Hesabı Ekleme Penceresi </h2>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/SocialMedia/AddSocialMedia/">

                            <label>Sosyal Medya İsmi</label>
                            <input type="text" name="Ad" class="form-control" />
                            <br />

                            <label>Sosyal Medya Linki</label>
                            <input type="text" name="Link" class="form-control" />
                            <br />

                            <label>Sosyal Medya İkonu</label>
                            <input type="text" name="ikon" class="form-control" />
                            <br />

                            <button type="submit" class="btn btn-primary">KAYDET</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
</body>
</html>

