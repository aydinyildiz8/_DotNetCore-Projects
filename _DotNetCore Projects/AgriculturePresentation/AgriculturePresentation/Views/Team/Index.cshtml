@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Takım Listesi</h4>

                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                          <tr>
                              <th>Görsel</th>
                              <th>Id</th>
                              <th>Ad</th>
                              <th>Görev</th>
                              <th>Görsel Linki</th>
                              <th>Facebook Linki</th>
                              <th>Instagram Linki</th>
                              <th>Twitter Linki</th>
                              <th>Web Linki</th>
                              <th>Sil</th>
                              <th>Güncelle</th>
                          </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                                  <tr>
                                      <td class="py-1">
                                          <img src="/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image"/>
                                      </td>
                                      <td>@item.TeamId</td>
                                      <td>@item.PersonName</td>
                                      <td>@item.Title</td>
                                      <td>@item.ImageUrl</td>
                                      <td>@item.FacebookUrl</td>
                                      <td>@item.InstagramUrl</td>
                                      <td>@item.TwitterUrl</td>
                                      <td>@item.WebSiteUrl</td>
                                      <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger">Sil</a></td>
                                      <td><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-success">Güncelle</a></td>
                                  </tr>
                        }

                      </tbody>
                    </table>
                   <div class="pt-4">
                    <a href="/Team/AddTeam/" class="btn btn-outline-info me-2">Yeni Personel Girişi Girişi</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

