@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Duyuru Güncelleme Sayfası Girişi</h4>
          <form class="forms-sample" method="post">
              @Html.HiddenFor(x=>x.AnnouncementId)
          <div class="form-group">
            <label for="exampleInputTitle">Başlık</label>
            <input type="text" class="form-control" id="exampleInputTitle" placeholder="Lütfen Başlık Giriniz" asp-for="Title">
          </div>
          <div class="form-group">
            <label for="exampleTextarea1">Açıklama</label>
            <textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="Description"></textarea>
          </div>
              <div class="form-group">
            <label for="exampleInputDate">Tarih</label>
            <input type="date" class="form-control" id="exampleInputDate" placeholder="Lütfen Tarih Giriniz" asp-for="Date">
          </div>
          <button type="submit" class="btn btn-outline-success me-2">Değişiklikleri Kaydet</button>
          <a href="/Announcement/Index/" class="btn btn-light">Vazgeç</a>
        </form>
      </div>
    </div>
  </div>






